@model GraffitiVR.Model.Sketch

@{
    Layout = "";
    ViewBag.Title = "RenderSketch";
}

<!DOCTYPE html>
<html>
<head>
    <title>Graffiti VR</title>
    <meta name="description" content="Graffiti VR">
    <script src="/js/aframe.min.js"></script>
    <script src="/js/aframe-environment-component.min.js"></script>
    <script src="/js/bot_aframe.js"></script>
</head>
<body>
<script>
AFRAME.registerComponent('botdraw', {
  schema: {type: 'string'},
  init: function () {
	@Html.Raw(Model.Code)
  }
});
    </script>
    <a-scene botdraw="true">
        <a-entity light="color: #white; intensity: 1.5" position="-10 10 -10"></a-entity>
        <a-entity environment="preset: tron"></a-entity>
        <a-entity position="-10 0 0" rotation="0 270 0">
            <a-camera></a-camera>
        </a-entity>
    </a-scene>
</body>
</html>